<Window x:Name="Toolbar" x:Class="TheToolbarButler.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:TheToolbarButler"
        mc:Ignorable="d"
        Title="MainWindow" Height="450" Width="99" Loaded="Toolbar_Loaded">
    <Grid Width="100">
        <ListView x:Name="listView" d:ItemsSource="{d:SampleData ItemCount=5}" Height="434" VerticalAlignment="Top" Margin="0,-10,0,0">
            <ListView.View>
                <GridView>
                    <GridViewColumn/>
                </GridView>
            </ListView.View>
        </ListView>

    </Grid>
</Window>
